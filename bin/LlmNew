#!/usr/bin/env bash

find_git_dir() {
	dir=$(pwd)

	while [ "$dir" != "/" ]; do
		if [ -d "$dir/.git" ]; then
			echo $dir
			return
		fi
		dir=$(dirname "$dir")
	done

	printf ''
}

find_prompt() {
	dir=$(pwd)

	while [ "$dir" != "/" ]; do
		if [ -f "$dir/.prompt" ]; then
			echo -e "\n## Prompt\n"
			cat "$dir/.prompt"
			echo -e "\n\n"
			return
		fi
		dir=$(dirname "$dir")
	done

	# Return empty if no file found
	printf ''
}

prompt=$(find_prompt)
project_dir=$(find_git_dir | sed s/\\//__/g)
chat_fname="$HOME/.local/state/acme-utils/llm/`date +%Y%m%d%H%M%S`$project_dir.md"
chat_dirname=$(dirname $chat_fname)

mkdir -p $chat_dirname

# Check for an optional model parameter
model_name="$1"
frontmatter=""

if [ -n "$model_name" ]; then
    frontmatter="---\nmodel: $model_name\n---\n\n"
fi

echo -e "${frontmatter}# Title Here\n${prompt}\n\n## You [[LlmSend]]\n" | 9p write acme/new/body

new_winid=$(9p ls acme | sort -g | tail -n 1)

echo "name $chat_fname" | 9p write acme/$new_winid/ctl
echo -n clean | 9p write acme/$new_winid/ctl
